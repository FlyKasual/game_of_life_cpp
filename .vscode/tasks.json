{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-fdiagnostics-color=always",
				"-Wall",
				"--std=c++17",
				"-v",
				"-I ${fileDirname}/",
				"${fileDirname}/*.cpp",
				"${fileDirname}/Domain/Model/CellularAutomaton/*.cpp",
				"-o",
				"${fileDirname}/../dist/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}/dist/"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}
